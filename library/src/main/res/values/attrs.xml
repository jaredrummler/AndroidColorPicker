<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

  <declare-styleable name="ColorPanelView">
    <attr name="jrcc_showOldColor" format="boolean"/>
    <attr name="jrcc_colorShape" format="enum">
      <enum name="square" value="0"/>
      <enum name="circle" value="1"/>
    </attr>
    <attr name="jrcc_borderColor" format="color|reference"/>
  </declare-styleable>

  <declare-styleable name="ColorPickerView" parent="ColorPanelView">
    <attr name="jrcc_alphaChannelVisible" format="boolean|reference"/>
    <attr name="jrcc_alphaChannelText" format="string|reference"/>
    <attr name="jrcc_sliderColor" format="color|reference"/>
    <attr name="jrcc_borderColor"/>
  </declare-styleable>

  <declare-styleable name="ColorPreference" parent="ColorPickerDialog">
    <attr name="jrcc_showAlphaSlider" format="boolean|reference"/>
    <attr name="jrcc_previewSize" format="enum">
      <enum name="regular" value="0"/>
      <enum name="large" value="1"/>
    </attr>
    <attr name="jrcc_colorShape"/>
    <attr name="jrcc_dialogTitle" format="reference"/>
    <attr name="jrcc_colorPresets" format="reference"/>
    <attr name="jrcc_dialogType" format="enum">
      <enum name="custom" value="0"/>
      <enum name="preset" value="1"/>
    </attr>
    <attr name="jrcc_showColorShades" format="boolean|reference"/>
    <attr name="jrcc_allowPresets" format="boolean|reference"/>
    <attr name="jrcc_allowCustom" format="boolean|reference"/>
    <attr name="jrcc_showDialog" format="boolean|reference"/>
  </declare-styleable>

</resources>